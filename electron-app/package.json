{
  "name": "youtube-downloader-electron",
  "private": true,
  "version": "1.0.0",
  "description": "YouTube Downloader - Electron + React",
  "main": "dist-electron/main.cjs",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:electron": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && VITE_DEV_SERVER_URL=http://localhost:5173 electron .\"",
    "build": "tsc -b && vite build && npm run build:electron",
    "build:electron": "tsc -p tsconfig.electron.json && mv dist-electron/main.js dist-electron/main.cjs && mv dist-electron/preload.js dist-electron/preload.cjs",
    "preview": "vite preview",
    "electron": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "dependencies": {
    "lucide-react": "^0.556.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "concurrently": "^9.2.1",
    "electron": "^39.2.6",
    "electron-builder": "^26.0.12",
    "typescript": "~5.9.3",
    "vite": "^7.2.4",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.youtubedownloader.app",
    "productName": "YouTube Downloader",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*.cjs"
    ],
    "extraResources": [
      {
        "from": "../lib",
        "to": "lib",
        "filter": ["**/*.js", "**/*.cjs"]
      }
    ],
    "mac": {
      "target": "dir",
      "icon": "../icon.icns",
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": "nsis",
      "icon": "../favicon.ico"
    }
  }
}
